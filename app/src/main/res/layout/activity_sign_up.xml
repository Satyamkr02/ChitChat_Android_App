<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.SignUpActivity">


    <ImageView
        android:id="@+id/iv_back_signUpActivity"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_signUp_illustraion_signUpActivity"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_signUpActivity"
        app:srcCompat="@drawable/signup_illustration" />

    <TextView
        android:id="@+id/tv_signUp_signUpActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/sf_pro_black"
        android:text="Sign Up"
        android:textColor="@color/primary_blue"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_signUp_illustraion_signUpActivity" />


    <ImageView
        android:id="@+id/iv_username_icon_signUpActivity"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/user_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signUp_signUpActivity" />

    <EditText
        android:id="@+id/et_username_signUpActivity"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_custom_shape"
        android:fontFamily="@font/sf_pro"
        android:hint="Full Name"
        android:paddingStart="20dp"
        android:inputType="text"
        android:textColor="@color/primary_blue"
        android:shadowDy="5"
        android:shadowColor="@color/black"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_username_icon_signUpActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_username_icon_signUpActivity"
        app:layout_constraintTop_toTopOf="@+id/iv_username_icon_signUpActivity" />

    <ImageView
        android:id="@+id/iv_email_icon_signUpActivity"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/email_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_username_icon_signUpActivity" />

    <EditText
        android:id="@+id/et_email_signUpActivity"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_custom_shape"
        android:fontFamily="@font/sf_pro"
        android:hint="Email  ID"
        android:paddingStart="20dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/primary_blue"
        android:shadowDy="5"
        android:shadowColor="@color/black"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_email_icon_signUpActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_email_icon_signUpActivity"
        app:layout_constraintTop_toTopOf="@+id/iv_email_icon_signUpActivity" />


    <ImageView
        android:id="@+id/iv_password_icon_signUpActivity"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_email_icon_signUpActivity" />

    <EditText
        android:id="@+id/et_password_signUpActivity"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_custom_shape"
        android:fontFamily="@font/sf_pro"
        android:hint="Password"
        android:paddingStart="20dp"
        android:inputType="textPassword"
        android:textColor="@color/primary_blue"
        android:shadowDy="5"
        android:shadowColor="@color/black"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_password_icon_signUpActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_password_icon_signUpActivity"
        app:layout_constraintTop_toTopOf="@+id/iv_password_icon_signUpActivity" />

    <ImageView
        android:id="@+id/iv_confirm_password_icon_signUpActivity"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/confirm_password_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_password_icon_signUpActivity" />

    <EditText
        android:id="@+id/et_confirm_password_signUpActivity"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_custom_shape"
        android:fontFamily="@font/sf_pro"
        android:hint="Confirm Password"
        android:paddingStart="20dp"
        android:inputType="textVisiblePassword"
        android:textColor="@color/primary_blue"
        android:shadowDy="5"
        android:shadowColor="@color/black"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_confirm_password_icon_signUpActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_confirm_password_icon_signUpActivity"
        app:layout_constraintTop_toTopOf="@+id/iv_confirm_password_icon_signUpActivity" />

    <Button
        android:id="@+id/btn_continue_signUpActivity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/primary_blue"
        android:fontFamily="@font/inter_variable"
        android:text="Continue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password_signUpActivity" />

    <TextView
        android:id="@+id/tv_joined_us_before_signUpActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:fontFamily="@font/sf_pro"
        android:text="Joined us before?"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_continue_signUpActivity"
        app:layout_constraintVertical_bias="0.493" />

    <TextView
        android:id="@+id/tv_login_signUpActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/sf_pro"
        android:text="Login"
        android:textColor="@color/primary_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_joined_us_before_signUpActivity"
        app:layout_constraintStart_toEndOf="@+id/tv_joined_us_before_signUpActivity"
        app:layout_constraintTop_toTopOf="@+id/tv_joined_us_before_signUpActivity" />


</androidx.constraintlayout.widget.ConstraintLayout>