<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/imageView_app_logo_SplashScreen"
        android:layout_width="296dp"
        android:layout_height="296dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        app:srcCompat="@drawable/app_logo_without_bg" />

    <TextView
        android:id="@+id/tv_tagline_SplashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_black"
        android:text="Vibe. Chat. Repeat."
        android:textStyle="bold"
        android:textColor="@color/title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_app_logo_SplashScreen"
        app:layout_constraintStart_toStartOf="@+id/imageView_app_logo_SplashScreen"
        app:layout_constraintTop_toBottomOf="@+id/imageView_app_logo_SplashScreen" />

    <TextView
        android:id="@+id/tv_developed_by_SplashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/sf_pro"
        android:text="Developed By"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_SatyamKumar_SplashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/sf_pro"
        android:text="Satyam Kumar"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_developed_by_SplashScreen" />



</androidx.constraintlayout.widget.ConstraintLayout>